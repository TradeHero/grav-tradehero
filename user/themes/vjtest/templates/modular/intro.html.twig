<section id="features" class="features">
  <div class="container">
            <div class="row">
                <div class="col-sm-8">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-12 text-center">
                                <div class="section-heading">
                                    <h2>{{ page.media[page.header.new_badge].html() }}<strong>{{ page.header.title}}</strong></h2>
                                </div>
                            </div>
                        </div>
                        <div class="row show-grid">
                            <div class="col-md-3 col-sm-3 feature-item">
                                <div class="">
                                    {{ page.media[page.header.features[0].icon].html() }}
                                    <br />
                                    <br />
                                    <h4>{{page.header.features[0].text}}</h4>
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-3 feature-item">
                                <div class="">
                                    {{ page.media[page.header.features[1].icon].html() }}
                                    <br />
                                    <br />
                                    <h4>{{page.header.features[1].text}}</h4>
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-3 feature-item">
                                <div class="">
                                    {{ page.media[page.header.features[2].icon].html() }}
                                    <br />
                                    <br />
                                    <h4>{{page.header.features[2].text}}</h4>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                        <div class="col-md-4 col-sm-4"> &nbsp;</div>
                        <div class="col-md-4 col-sm-4"><p class="green-subtitile">{{page.header.download_title}}</p></div>
                        <div class="col-md-4 col-sm-4"> &nbsp;</div>                            
                        </div>
                        <div class="row" style="text-align: center;">
                            <div class="col-md-5 col-sm-5">
                            {#QR code goes here#}
                            <div>
                                {{page.header.qr_text}}
                            </div>
                            <div>
                                <img src="https://chart.googleapis.com/chart?chs=150x150&amp;cht=qr&amp;chl=http://grav.tradehero.mobi/{{grav.language.getLanguage ?: 'en'}}/redirect" />
                            </div>                                
                            </div>
                            <div class="col-md-2 col-sm-2 vertical-hide">
                                {{ page.media[page.header.icon_divider_vertical].html() }}
                            </div>
                            <div class="col-md-2 col-sm-2 horizontal-hide">
                                {{ page.media[page.header.icon_divider_horizontal].html() }}
                            </div>
                            <div class="col-md-5 col-sm-5">
                                <div class="badges">
                                </br></br>
                                    <div class="row">
                                        <a class="badge-link" href="#"><img src="{{ page.media[page.header.icon_google_play].url }}" width="40%" alt=""></a>
                                    </div>
                                    </br>
                                    <div class="row">
                                        <a class="badge-link" href="#"><img src="{{ page.media[page.header.icon_apple_appstore].url }}" width="40%" alt=""></a>
                                    </div> 
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="device-container">
                        <div class="device-mockup iphone6_plus portrait white">
                            <div class="device">
                                <div class="screen">
                                    {% if isMobile() %}
                                        <img src="{{ page.media[page.header.image_mobile_display].url }}" width="100%" alt="">
                                    {% else %}
                                    <!-- Demo image for screen mockup, you can put an image here, some HTML, an animation, video, or anything else! -->
                                        <video autoplay loop style="width: 100%;">
                                            <source src="{{ page.media[page.header.product_video].url }}" type="video/mp4">
                                        </video>
                                    {% endif %}
                                </div>
                                <div class="button">
                                    <!-- You can hook the "home button" to some JavaScript events or just remove it -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>