<section id="feature-container" class="virtual bg-virtual">
        <div class="text-center" style="margin-top: -130px; position: absolute; left: 50%;">
      <div class="onoffswitch">
        <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" id="myonoffswitch">
        <label class="onoffswitch-label" for="myonoffswitch">
            <span class="onoffswitch-inner"></span>
            <span class="onoffswitch-switch"></span>
        </label>
      </div>
    </div>
        <div class="container" id="data-virtual">
            <div class="row">
                <div class="col-md-4">
                    <div class="device-container device-container-big">
                        <div class="device-mockup iphone6 portrait white">
                            <div class="device">
                                <div class="screen">
                                    <!-- Demo image for screen mockup, you can put an image here, some HTML, an animation, video, or anything else! -->
                                    <img src="{{ page.media[page.header.virtual_image].url }}" width="100%" class="img-responsive" alt="">
                                </div>
                                <div class="button">
                                    <!-- You can hook the "home button" to some JavaScript events or just remove it -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-12">
                                <br/>
                                <br/>
                                <h2>{{page.header.virtual_features_title}}</h2>
                                <br/>
                                <br/>
                                <ul>
                                    {% for feature in page.header.virtual_features_list %}
                                        <li>
                                            {{feature.text}}
                                            {% if feature.image %}
                                                <br/><img src="{{ page.media[feature.image].url }}" />
                                            {% endif %}
                                        </li>
                                    {% endfor %}
                                </ul>
                                {% if page.header.virtual_features_special_notes %}
                                    {% for specialnote in page.header.virtual_features_special_notes %}
                                        {% if specialnote.url %}
                                            <p style="padding-left: 15px;"><a href="{{specialnote.url}}">{{specialnote.text}}</a></p>
                                        {% else %}
                                            <p style="padding-left: 15px;">{{specialnote.text}}</p>
                                        {% endif %}
                                    {% endfor %}
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container" id="data-live" style="display: none;">
            <div class="row">
                <div class="col-md-4">
                    <div class="device-container device-container-big">
                        <div class="device-mockup iphone6 portrait white">
                            <div class="device">
                                <div class="screen">
                                    <!-- Demo image for screen mockup, you can put an image here, some HTML, an animation, video, or anything else! -->
                                    <img src="{{ page.media[page.header.live_image].url }}" width="100%" class="img-responsive" alt="">
                                </div>
                                <div class="button">
                                    <!-- You can hook the "home button" to some JavaScript events or just remove it -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-12">
                                <br/>
                                <br/>
                                <h2>{{page.header.live_features_title}}</h2>
                                <br/>
                                <br/>
                                <ul>
                                {% for feature in page.header.live_features_list %}
                                        <li>
                                            {{feature.text}}
                                            {% if feature.image %}
                                                <br/><img src="{{ page.media[feature.image].url }}" />
                                            {% endif %}
                                        </li>
                                    {% endfor %}
                                </ul>
                                {% if page.header.live_features_special_notes %}
                                    {% for specialnote in page.header.live_features_special_notes %}
                                        {% if specialnote.url %}
                                            <p style="padding-left: 15px;"><a href="{{specialnote.url}}">{{specialnote.text}}</a></p>
                                        {% else %}
                                            <p style="padding-left: 15px;">{{specialnote.text}}</p>
                                        {% endif %}
                                    {% endfor %}
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>